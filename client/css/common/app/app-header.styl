_color-blue = #0177c1
_color-gray = #757575
_color-silver = #f5f7f7
_text-blue = #0078c5
_color-cyan = #00c6ff
_white = #FFFFFF

.header
  background-color white
  box-shadow 0px 3px 3px -2px rgba(0, 0, 0, 0.2), 0px 3px 4px 0px rgba(0, 0, 0, 0.14), 0px 1px 8px 0px rgba(0, 0, 0, 0.12)
  padding 1em
  position relative
  z-index 9
  &__wrapper
    display flex
    justify-content space-between
  &__right
    .hello
      text-align right
      text-transform uppercase
      color _color-blue
      padding 25px 0
      span
        text-transform capitalize
      br
        display none
      a
        font-weight: bold;
        padding 13px 0 13px 13px
  &__left
    align-items center
    display flex
    .logo-gdg
      max-width 100%
  &__actions
    display flex
    flex-direction column

@media screen and (max-width: 770px)
  .header
    &__right
      .hello
        color _white
        a
          color _white
          padding-right 5px

@media screen and (max-width: 520px)
  .header
    &__right
      .hello
        padding 16px 0
        br
          display block

@media only screen and (min-width: 48em)
  .header
    &__actions
      flex-direction row