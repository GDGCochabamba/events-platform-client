.event
  font-weight 300
  color #757575
  hr
    border 0
    border-top 1px solid #bcbdbd
  h2
    color #757575
    font-size 18px
    font-weight 400
  &__align
    padding 30px
  &__header
    position relative
  &__image
    display block
    font-size 0
    position relative
    img
      width 100%
    figcaption
      background #0177c1      
      height 100%
      position absolute
      opacity .6
      top 0
      width 100%
  &__main-details
    position absolute
    padding 30px
    padding-bottom 20px
    bottom 0
  &__title,
  &__date
    color white
    font-weight 500
    letter-spacing 1px
    text-shadow 1px 1px 2px rgba(0, 0, 0, 0.5)
  &__title
    font-size 28px
    margin 0
  &__date
    font-size 20px
    md-icon
      color white
  &__number-attendees
    background-color #9b9b9b
    color white
    font-weight 500
    text-align center
    // 00c6ff
  &__schedule
    ul
      list-style none      
      padding 0 10px
  &__schedule-row
    display flex
    justify-content flex-start
    md-icon
      margin-right 1em

