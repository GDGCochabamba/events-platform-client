.event
  font-weight 300
  color #757575  
  hr
    border 0
    border-top 1px solid #bcbdbd
  h2
    color #757575
    font-size 18px
    font-weight 400
  &__align
    max-width 71em
    padding 30px
    position relative
  &__header
    background-image url(../images/event-1.jpg)
    background-size cover
    background-repeat no-repeat
    background-position center
    height 80vh    
    position relative
  &__subscribe    
    position fixed
    bottom .5em
    right 1em
    .material-icons
      color white
  &__image-layer
    background #0177c1
    height 100%
    position absolute
    opacity .5
    top 0
    width 100%
  &__main-details
    position absolute
    padding 30px
    padding-bottom 20px
    bottom 0
  &__title,
  &__date
    color white
    font-weight 500
    letter-spacing 1px
    text-shadow 1px 1px 2px rgba(0, 0, 0, 0.5)
  &__title
    font-size 28px
    margin 0
    text-align left
  &__date
    font-size 20px
    md-icon
      color white
      margin-right .2em
  &__number-attendees
    background-color #9b9b9b
    color white
    font-weight 500
    min-height 10px
    text-align center
    // 00c6ff
  &__schedule
    h4
      margin-bottom .4em

@media screen and (min-width: 37.5em)
  .event
    &__header
      max-height 42em
    &__subscribe      
      bottom 3em
      right 3em
    &__align
      max-width 71em

